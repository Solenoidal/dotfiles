% brew

# install packages
brew bundle --file ~/Brewfile && brew bundle cleanup --force --file ~/Brewfile

# update packages
brew update && brew upgrade

# reinstall neovim
brew reinstall neovim

# list package
# brew list --file ~/Brewfile

# check package
# brew check --file ~/Brewfile

# search
brew search <app>

# cleanup
# brew bundle cleanup --force --file ~/Brewfile

# edit Brewfile
nvim ~/Brewfile
