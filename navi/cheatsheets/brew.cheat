% brew

# install packages
brew bundle --verbose --file ~/Brewfile && brew bundle cleanup --force --file ~/Brewfile && brew update && brew upgrade

# list package
brew list --file ~/Brewfile

# check package
brew check --file ~/Brewfile

# search
brew search <app> && mas search <app>

# cleanup
brew bundle cleanup --force --file ~/Brewfile && brew update && brew upgrade

# edit Brewfile
nvim ~/Brewfile

