{
	"name": "vscode-yarn-script",
	"description": "Run yarn scripts from the Command Palette",
	"displayName": "yarn Script Runner",
	"version": "0.0.1",
	"publisher": "carlosjs23",
	"icon": "yarn_icon.png",
	"engines": {
		"vscode": "^1.5.0"
	},
	"homepage": "https://github.com/carlosjs23/vscode-yarn-scripts/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/carlosjs23/vscode-yarn-scripts.git"
	},
	"bugs": {
		"url": "https://github.com/carlosjs23/vscode-yarn-scripts/issues"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:yarn-script.install-yarn",
		"onCommand:yarn-script.install",
		"onCommand:yarn-script.run",
		"onCommand:yarn-script.showOutput",
		"onCommand:yarn-script.rerun-last-script",
		"onCommand:yarn-script.terminate-script",
		"onCommand:yarn-script.test",
		"onCommand:yarn-script.start",
		"onCommand:yarn-script.build"
	],
	"main": "./out/src/main",
	"contributes": {
		"commands": [
			{
				"command": "yarn-script.install-yarn",
				"title": "Install YarnPkg",
				"category": "yarn"
			},
			{
				"command": "yarn-script.install",
				"title": "Install Dependencies",
				"category": "yarn"
			},
			{
				"command": "yarn-script.terminate-script",
				"title": "Terminate Script",
				"category": "yarn"
			},
			{
				"command": "yarn-script.run",
				"title": "Run Script",
				"category": "yarn"
			},
			{
				"command": "yarn-script.start",
				"title": "Start",
				"category": "yarn"
			},
			{
				"command": "yarn-script.showOutput",
				"title": "Show Output",
				"category": "yarn"
			},
			{
				"command": "yarn-script.rerun-last-script",
				"title": "Rerun Last Script",
				"category": "yarn"
			},
			{
				"command": "yarn-script.test",
				"title": "Run Test",
				"category": "yarn"
			},
			{
				"command": "yarn-script.build",
				"title": "Run Build",
				"category": "yarn"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceFilename == 'package.json'",
					"command": "yarn-script.install",
					"group": "navigation@+1"
				}
			]
		},
		"keybindings": [
			{
				"command": "yarn-script.showOutput",
				"key": "Ctrl+R L",
				"mac": "Cmd+R L"
			},
			{
				"command": "yarn-script.run",
				"key": "Ctrl+R Shift+R",
				"mac": "Cmd+R Shift+R"
			},
			{
				"command": "yarn-script.rerun-last-script",
				"key": "Ctrl+R R",
				"mac": "Cmd+R R"
			},
			{
				"command": "yarn-script.terminate-script",
				"key": "Ctrl+R Shift+X",
				"mac": "Cmd+R Shift+X"
			},
			{
				"command": "yarn-script.test",
				"key": "Ctrl+R T",
				"mac": "Cmd+R T"
			}
		],
		"configuration": {
			"type": "object",
			"title": "yarn Script Runner",
			"properties": {
				"yarn.runInTerminal": {
					"type": "boolean",
					"default": true,
					"description": "Run yarn commands in a terminal, otherwise shows the output in the output panel"
				},
				"yarn.includeDirectories": {
					"type": "array",
					"default": [],
					"description": "Look for 'package.json' files in these directories"
				},
				"yarn.useRootDirectory": {
					"type": "boolean",
					"default": true,
					"description": "Look for 'package.json' in the root directory of the workspace"
				},
				"yarn.runSilent": {
					"type": "boolean",
					"default": false,
					"description": "Run yarn commands with the `--silent` option"
				},
				"yarn.bin": {
					"type": "string",
					"default": "yarn",
					"description": "yarn bin name"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^2.0.3",
		"vscode": "^1.0.0",
		"@types/node": "^6.0.40",
		"@types/mocha": "^2.2.32",
		"tslint": "^3.15.1"
	},
	"dependencies": {
		"run-in-terminal": "^0.0.2",
		"tree-kill": "^1.1.0"
	},
	"__metadata": {
		"id": "05bc6192-b517-4f6c-a5a2-6897bbdb8fbc",
		"publisherId": "75a4247e-83d7-41b6-8d27-1452181c3bb0",
		"publisherDisplayName": "carlosjs23"
	}
}