{
	"name": "markdown-formatter",
	"displayName": "markdown-formatter",
	"description": " A Markdown Plugin for code artist",
	"version": "0.8.6",
	"icon": "icon.png",
	"publisher": "mervin",
	"engines": {
		"vscode": "^1.44.0"
	},
	"keywords": [
		"Markdown",
		"Formatters"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/sumnow/markdown-formatter"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Markdown Formatter",
			"properties": {
				"markdownFormatter.fullWidthTurnHalfWidth": {
					"type": "string",
					"default": "auto",
					"description": "Unify full-width (，：；！“”‘’（）？。) as a half-width character(,:;!''()?.)."
				},
				"markdownFormatter.codeAreaToBlock": {
					"type": "string",
					"default": "",
					"description": "Convert code area to code block"
				},
				"markdownFormatter.displayTime": {
					"type": "boolean",
					"default": false,
					"description": "Display time before article"
				},
				"markdownFormatter.enable": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable markdown-formatter."
				},
				"markdownFormatter.formatCodes": {
					"type": "boolean",
					"default": true,
					"description": "set false to stop all code format"
				},
				"markdownFormatter.formatOpt": {
					"type": "object",
					"default": {},
					"description": "config as js-beautify options"
				},
				"markdownFormatter.formatULSymbol": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable formatted unordered list symbol."
				},
				"markdownFormatter.spaceAfterFullWidthOrHalfWidth": {
					"type": "string",
					"default": "half",
					"enum": [
						"half",
						"full",
						"all",
						"neither"
					],
					"description": " `full` will insert a space after the full-width symbol , `half` , `all` or `neither`"
				}
			}
		},
		"snippets": [
			{
				"language": "markdown",
				"path": "./snippets/markdown.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "jest"
	},
	"jest": {
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@types/jest": "^25.2.1",
		"jest": "^25.4.0",
		"ts-jest": "^25.4.0",
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"escape-string-regexp": "^1.0.5",
		"js-beautify": "^1.8.8"
	},
	"__metadata": {
		"id": "9fdd4cad-d0b9-4c21-b7b7-54b9a7a7dbcf",
		"publisherDisplayName": "mervin",
		"publisherId": "8d584bb5-61f8-40ec-886e-d4dbbf26d9c1"
	}
}